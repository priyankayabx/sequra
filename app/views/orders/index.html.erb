<p id="notice">Download CSV<%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
    <th>Order Id</th>
    <th>Order Refrence Number</th>
      <th>Merchant Email ID</th>
      <th>Live ON</th>
      <th>Disbursement Frequency</th>
      <th>Minimum Monthly Fee</th>
      <th>Status</th>
      <th>Amount</th>
      <th>Comission percentage</th>
      <th>Comission Amount</th>
      <th>Net Amount</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
      <td><%= order.id %></td>
      <td><%= order.order_refrence_no%></td>
        <td><%= order.merchant.email_id %></td>
        <td><%= order.merchant.created_at.to_date %></td>
        <td><%= Merchant.disbursement_frequency(order.merchant.disbursement_frequency) %></td>
        <td><%= order.merchant.min_monthly_fee%></td>
        <td><%= order_status(order.status) %></td>
        <td><%= order.amount %></td>
        <td><%= order.comission_percentage %></td>
        <td><%= order.sequra_commission_amount %></td>
        <td><%= order.merchant_received_amount %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

